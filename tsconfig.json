{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src/",
    "moduleResolution": "node",
    "baseUrl": "./",
    "outDir": "./dist/",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "files": [
    "src/index.ts",
    "src/env.ts",
    "src/client.ts",
    "src/deploy-commands.ts"
  ],
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
